<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.taximgmt.web.booking.BookingBrowse"
        focusComponent="bookingsTable"
        lookupComponent="bookingsTable"
        messagesPack="com.company.taximgmt.web.booking">
    <dsContext>
        <datasource id="bookingDs"
                    class="com.company.taximgmt.entity.Booking"
                    view="_local"/>
        <collectionDatasource id="bookingsDs"
                              class="com.company.taximgmt.entity.Booking"
                              view="_local">
            <query>
                <![CDATA[select e from taximgmt$Booking e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="bookingsTable"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="bookingsTable"
                        datasource="bookingsDs">
                    <properties include=".*"/>
                </filter>
                <table id="bookingsTable"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                        <action id="excel"/>
                    </actions>
                    <columns>
                        <column id="date"/>
                        <column id="no_of_bookings"/>
                    </columns>
                    <rows datasource="bookingsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="bookingsTable.create"/>
                        <button id="editBtn"
                                action="bookingsTable.edit"/>
                        <button id="removeBtn"
                                action="bookingsTable.remove"/>
                        <button id="excelBtn"
                                action="bookingsTable.excel"/>
                    </buttonsPanel>
                </table>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="bookingDs">
                        <column width="250px">
                            <field id="date"/>
                            <field id="no_of_bookings"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
