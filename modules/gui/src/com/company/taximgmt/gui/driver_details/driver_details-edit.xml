<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.company.taximgmt.gui.driver_details.Driver_detailsEdit"
        datasource="driver_detailsDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.taximgmt.gui.driver_details">
    <dsContext>
        <datasource id="driver_detailsDs"
                    class="com.company.taximgmt.entity.Driver_details"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="driver_detailsDs">
            <column width="250px">
                <field id="driver_id"/>
                <field id="driver_name"/>
                <field id="phone_number"/>
                <field id="licence_number"/>
                <field id="car_number"/>
                <field id="date"/>
                <field id="start_time"/>
                <field id="end_time"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
