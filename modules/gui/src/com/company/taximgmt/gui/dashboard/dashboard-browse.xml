<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.taximgmt.gui.dashboard.DashboardBrowse"
        messagesPack="com.company.taximgmt.gui.dashboard">
    <dsContext>
        <collectionDatasource id="dashboardsDs"
                              class="com.company.taximgmt.entity.Dashboard"
                              view="_local">
            <query>
                <![CDATA[select e from taximgmt$Dashboard e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <label id="label"
               align="TOP_RIGHT"
               height="23px"
               htmlEnabled="true"
               icon="image.png"
               value="DASHBOARD"/>
        <embedded id="image"
                  align="MIDDLE_CENTER"/>
        <hbox spacing="true">
            <groupBox id="groupBoxImage"
                      caption="Embedded image from FileStorage"
                      height="250px"
                      width="300px">
                <embedded id="imageFromFileStorage"
                          align="MIDDLE_CENTER"
                          width="100%"/>
            </groupBox>
            <groupBox caption="Embedded image file"
                      height="250px"
                      width="250px"/>
        </hbox>
    </layout>
</window>
