<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.taximgmt.gui.customer_details.Customer_detailsBrowse"
        focusComponent="customer_detailsesTable"
        lookupComponent="customer_detailsesTable"
        messagesPack="com.company.taximgmt.gui.customer_details">
    <dsContext>
        <datasource id="customer_detailsDs"
                    class="com.company.taximgmt.entity.Customer_details"
                    view="_local"/>
        <collectionDatasource id="customer_detailsesDs"
                              class="com.company.taximgmt.entity.Customer_details"
                              view="_local">
            <query>
                <![CDATA[select e from taximgmt$Customer_details e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="customer_detailsesTable"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="customer_detailsesTable"
                        datasource="customer_detailsesDs">
                    <properties include=".*"/>
                </filter>
                <table id="customer_detailsesTable"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                        <action id="excel"/>
                        <action id="refresh"/>
                    </actions>
                    <columns>
                        <column id="customer_id"/>
                        <column id="customer_name"/>
                        <column id="email_id"/>
                        <column id="address"/>
                        <column id="alternate_phone_number"/>
                    </columns>
                    <rows datasource="customer_detailsesDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="customer_detailsesTable.create"/>
                        <button id="editBtn"
                                action="customer_detailsesTable.edit"/>
                        <button id="removeBtn"
                                action="customer_detailsesTable.remove"/>
                        <button id="excelBtn"
                                action="customer_detailsesTable.excel"/>
                        <button id="refreshBtn"
                                action="customer_detailsesTable.refresh"/>
                    </buttonsPanel>
                </table>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="customer_detailsDs">
                        <column width="250px">
                            <field id="customer_id"/>
                            <field id="customer_name"/>
                            <field id="email_id"/>
                            <field id="address"/>
                            <field id="alternate_phone_number"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
